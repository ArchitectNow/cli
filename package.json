{
  "version": "0.0.0-development",
  "license": "MIT",
  "name": "@architectnow/cli",
  "author": "Chau Tran",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArchitectNow/cli.git"
  },
  "module": "dist/cli.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "architectnow": "./bin/architectnow"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "sideEffects": false,
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "lint": "lint-staged && tsdx lint src",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --fix --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "next",
        "prerelease": true
      }
    ]
  },
  "devDependencies": {
    "@types/fs-extra": "8.1.1",
    "@types/inquirer": "6.5.0",
    "@types/node-fetch": "2.5.7",
    "commitizen": "4.0.5",
    "cz-conventional-changelog": "3.1.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.2",
    "prettier": "2.0.5",
    "semantic-release": "17.0.7",
    "tsdx": "0.13.2",
    "tslib": "1.11.1",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@angular-devkit/core": "9.1.4",
    "@lokalise/node-api": "^3.0.3",
    "fs-extra": "^9.0.0",
    "inquirer": "7.1.0",
    "kleur": "3.0.3",
    "node-fetch": "^2.6.0",
    "ora": "4.0.4",
    "reflect-metadata": "0.1.13",
    "tsyringe": "4.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
